<p id="notice"><%= notice %></p>

<h1>Last Articles</h1>


<% @articles.each do |article| %>
  <div class="card mb-3" style="max-width: %100%;">
    <div class="row g-0">
      <div class="col-md-4" style="max-width: 300px;" >
        <%= image_tag article.image ,class:"img-fluid rounded-start"  if article.image.attached?%>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <p class="card-text"><%= article.description %></p><p class="card-text">
          <small class="text-muted">
            <%= link_to 'Show', article %>
            <%= link_to 'Edit', edit_article_path(article) %>
            <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
          </small></p> 
        </div>
      </div>
    </div>
  </div>
<% end %>



<%= link_to 'New Article', new_article_path,class:"btn btn-secondary" %>
